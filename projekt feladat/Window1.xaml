<Window x:Class="vlm.stat_versenyzo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Versenyzői Statisztika" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Versenyzői Statisztika" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <ListView x:Name="StatListView" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Nev}" Width="120"/>
                    <GridViewColumn Header="Csapat" DisplayMemberBinding="{Binding Csapat}" Width="120"/>
                    <GridViewColumn Header="Tapasztalat" DisplayMemberBinding="{Binding Tapasztalat}" Width="100"/>
                    <GridViewColumn Header="Korosztály" DisplayMemberBinding="{Binding Korosztaly}" Width="100"/>
                    <GridViewColumn Header="Piros lap" DisplayMemberBinding="{Binding PirosLap}" Width="80"/>
                    <GridViewColumn Header="Sárga lap" DisplayMemberBinding="{Binding SargaLap}" Width="80"/>
                    <GridViewColumn Header="Nyereség" DisplayMemberBinding="{Binding Nyereseg}" Width="80"/>
                    <GridViewColumn Header="Veszteség" DisplayMemberBinding="{Binding Veszteseg}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="2" Content="Statisztika mentése" Padding="10,5" HorizontalAlignment="Center" Margin="0,20,0,0"
                Background="#2E7D32" Foreground="White" FontWeight="Bold" FontSize="16" Click="MentesStat_Click"/>
    </Grid>
</Window>
